@model List<PhoneBook.Models.Contact>

@{
    ViewData["Title"] = "Contacts Page";
}

<h2>Contact List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Company</th>
            <th>Email</th>
            <th>Phone Numbers</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model) 
        { 
            <tr> 
                <td>@contact.LastName</td> 
                <td>@contact.FirstName</td> 
                <td>@contact.Company</td> 
                <td>@contact.Email</td> 
                <td>@foreach (var pn in @contact.PhoneNumbers)
                    {
                        @pn.Label<span> | </span>@pn.Number
                        <br/>
                    }
            </td> 
            <td>
                <a asp-action="Edit" asp-route-id="@contact.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@contact.Id">Details</a>
            </td>
        </tr> 
    }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("Create", "Contacts")">Add New Contact</a>
