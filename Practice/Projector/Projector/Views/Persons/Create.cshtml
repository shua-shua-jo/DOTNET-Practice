@using Projector.Models.InputModels
@model CreateNewPersonInputModel
@{
    ViewData["Title"] = "Create Person";
}

<style>
    .card {
        border: none;
        border-radius: 12px;
        background: white;
    }

    .form-label {
        font-weight: 500;
        color: #344767;
        margin-bottom: 0.5rem;
    }

    .input-group-text {
        border: 1px solid #dee2e6;
        border-right: none;
        color: #6c757d;
    }

    .form-control {
        border: 1px solid #dee2e6;
        padding: 0.6rem 1rem;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13,110,253,.1);
        }

    .input-group > .form-control:focus {
        border-left: none;
    }

    .input-group > .form-control {
        border-left: none;
    }

    .btn {
        padding: 0.6rem 1.2rem;
        font-weight: 500;
    }

    .page-title {
        color: #344767;
        font-weight: 600;
    }
</style>

<div class="container-fluid px-0">
    <div class="row justify-content-center">
        <div class="d-flex align-items-center gap-3 mb-4 col-lg-8">
            <h1 class="page-title m-0">Create New Person</h1>
        </div>
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" class="d-flex flex-column gap-4">
                        @Html.AntiForgeryToken()
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">First Name<span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
                                        </svg>
                                    </span>
                                    <input asp-for="FirstName" 
                                           type="text" 
                                           maxlength="50" 
                                           class="form-control" 
                                           placeholder="Enter first name" 
                                           required 
                                           autocomplete="off" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">Last Name<span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
                                        </svg>
                                    </span>
                                    <input asp-for="LastName" 
                                           type="text" 
                                           maxlength="50" 
                                           class="form-control" 
                                           placeholder="Enter last name" 
                                           required 
                                           autocomplete="off" />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="UserName" class="form-label">Email Address<span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
                                        </svg>
                                    </span>
                                    <input asp-for="UserName" 
                                           type="email" 
                                           minlength="5" 
                                           maxlength="200" 
                                           required 
                                           class="form-control" 
                                           placeholder="Enter email address" 
                                           autocomplete="off" 
                                           spellcheck="false"
                                           autocapitalize="none" />
                                </div>
                                <span asp-validation-for="UserName" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Password" class="form-label">Password<span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                                            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2M5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1"/>
                                        </svg>
                                    </span>
                                    <input asp-for="Password" 
                                           type="password" 
                                           minlength="7" 
                                           maxlength="11" 
                                           required 
                                           class="form-control" 
                                           placeholder="Enter password" 
                                           autocomplete="off" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-2">
                            <a asp-action="Index" asp-controller="Persons" class="btn btn-light">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg me-2" viewBox="0 0 16 16">
                                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                                </svg>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg me-2" viewBox="0 0 16 16">
                                    <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z"/>
                                </svg>
                                Create Person
                            </button>
                        </div>
                    </form>
                    <div asp-validation-summary="All" class="text-danger mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>