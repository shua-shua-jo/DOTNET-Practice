@using Projector.Models.InputModels
@model SignInInputModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "_SigninLayout";
}

<style>
    .login-container {
        box-shadow: 0rem .25rem .75rem rgba(13, 110, 253, .15);
        padding: 1.5em;
        border-radius: 5px;
    }
</style>

<div class="d-flex flex-column justify-content-center align-items-center text-start vh-100">
    <div class="w-50 h-50 login-container">
        <h2>The Projector</h2>
        <p>Manage your projects with ease.</p>
        <form asp-action="Index" method="post">
            @Html.AntiForgeryToken()
            <div class="d-flex gap-3 flex-column">
                <div class="form-group">
                    <label asp-for="Username" class="control-label">Username</label>
                    <input asp-for="Username" 
                           type="email" 
                           minlength="5" 
                           maxlength="200" 
                           required 
                           class="form-control" 
                           placeholder="Enter username" 
                           autocomplete="off" 
                           spellcheck="false"
                           autocapitalize="none" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input asp-for="Password" type="password" minlength="7" maxlength="11" required class="form-control" placeholder="Enter password" autocomplete="off" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            <button type="submit" class="btn btn-primary">Sign in 
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0z" />
                    <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
                </svg>
            </button>
            </div>
        </form>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</div>